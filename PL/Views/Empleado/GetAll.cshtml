<div class="modal fade" id="ModalForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Agregar Empleado</h4>
            </div>

            <div class="modal-body">
                <form>
                    <div class="form-group">
                        
                        <input type="hidden" class="form-control" id="txtIdEmpleado" placeholder="IdEmpleado" />
                    </div>
                    <div class="form-group">
                        <h5>Numero de Nomina</h5>
                        <input type="text" class="form-control" id="txtNumeroNomina" placeholder="NumeroNomina" />
                    </div>
                    <div class="form-group">
                        <h5>Nombre</h5>
                        <input type="text" class="form-control" id="txtNombre" placeholder="Nombre" />
                    </div>
                    <div class="form-group">
                        <h5>Apellido Paterno</h5>
                        <input type="text" class="form-control" id="txtApellidoPaterno" placeholder="ApellidoPaterno" />
                    </div>
                    <div class="form-group">
                        <h5>Apellido Materno</h5>
                        <input type="text" class="form-control" id="txtApellidoMaterno" placeholder="ApellidoMaterno" />
                    </div>
                    <div class="form-group">
                        <label for="ddlEstados">Estado</label>
                        <select name="estado" class="form-control" id="ddlEstados"></select>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-success glyphicon-pencil" id="btnUpdate" onclick="Guardar()">Guardar</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                @*<button type="button" class="btn btn-success glyphicon-pencil" id="btnUpdate" onclick="InicializarController()">Cancelar</button>*@
            </div>
        </div>
    </div>
</div>